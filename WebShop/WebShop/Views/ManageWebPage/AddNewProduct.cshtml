@using WebShop.Models.ManageWebShop
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AddNewProductVM
@{
    ViewData["Title"] = "AddNewProduct";
}

<h2>Dodaj Novi Proizvod</h2>
<form asp-action="AddNewProduct" method="post" enctype="multipart/form-data">
    @if (ViewContext.ViewData.ModelState.IsValid == false)
            {
        <div class="panel panel-danger">
            <div class="panel-heading">
                There were some input errors.
            </div>
            <div class="panel-body">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
    }
    <label>Naziv proizvoda: </label><input asp-for="Name" /><span asp-validation-for="Name" style="color:red"></span><br />
    <label>Opis proizvoda: </label><input asp-for="Description" /><span asp-validation-for="Description" style="color:red"></span><br />
    <label>Cijena: </label><input asp-for="Price" type="number" step="0.01" />kn<span asp-validation-for="Price" style="color:red"></span><br />
    <label>Dostupna količina: </label><input asp-for="Quantity" /><span asp-validation-for="Quantity" style="color:red"></span><br />
    <label>Slika proizvoda: </label><input asp-for="Image" id="file-upload" type="file" onchange="ShowPreview(this)" /><span asp-validation-for="Image" style="color:red"></span> <br />
    <img id="imgPrev" src="~/Content/default-picture.svg" class="Img-prev" style="width: 100px;" />
    <label id="file-name" class="File-label">No file chosen.</label>
    <input type="submit" />
</form>

@section Scripts {
    <script src="~/js/ManageWebShop/AddNewProduct.js"></script>
}