@using WebShop.Models.ManageWebPage
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ChangeProductDetailsVM
@{
    ViewData["Title"] = "ChangeProductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/ManageWebPage/addNewProduct.css" />
</head>

<h2>Promijeni Detalje Proizvoda</h2>

<div class="row">
    <form asp-action="ChangeProductDetails" method="post">
        @if (ViewContext.ViewData.ModelState.IsValid == false)
            {
            <div class="panel panel-danger">
                <div class="panel-heading">
                    There were some input errors.
                </div>
                <div class="panel-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
        }
        <input asp-for="ProductID" hidden/>
        <div class="col-sm-6">
            <div class="row input-section">
                <label class="info-label">Opis proizvoda: </label><textarea class="info-textarea" asp-for="Description"></textarea><span asp-validation-for="Description" style="color:red"></span><br />
            </div>
            <div class="row input-section">
                <label class="info-label">Cijena: </label><input class="info-input" asp-for="Price" type="number" step="0.01" /> kn<span asp-validation-for="Price" style="color:red"></span><br />
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <input class="btn btn-primary button" type="submit" />
                    <a class="btn btn-danger button" asp-action="Index">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>


