@using WebShop.Models.ManageWebPage
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model OrderVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OrderPartial</title>
</head>
<body>
    <p><b>Datum narudžbe:</b> @Model.DateCreated</p>
    <p><b>Broj Narudžbe: </b>@Model.OrderID</p>
    <table class="order-items-table">
        <thead>
            <tr>
                <th>Proizvod</th>
                <th>Količina</th>
                <th>Cijena po komadu</th>
                <th>Ukupna cijena</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ShoppingCartVM.CartItemsVM)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.PricePerItem kn</td>
                    <td>@item.TotalPrice kn</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row">
        <div class="col-sm-5">
            <p><b>Ukupno:</b> @Model.TotalPrice kn</p>
            <p><b>Popust:</b> @Model.Discount kn</p>
            <p><b>Za platiti:</b> @Model.PriceToPay kn</p>
            <p><b>Ime:</b> @Model.Name</p>
            <p><b>Prezime:</b> @Model.Surname</p>
            <p><b>Adresa 1:</b> @Model.StreetAdress1</p>
            <p><b>Adresa 2:</b> @Model.StreetAdress2</p>
            <p><b>Grad:</b> @Model.City</p>
            <p><b>Poštanski broj:</b> @Model.PostalCode</p>
            <p><b>Država:</b> @Model.Country</p>
            <p><b>Email:</b> @Model.Email</p>
            <p><b>Broj mobitela:</b> @Model.MobilePhoneNumber</p>
            <p><b>Broj telefona:</b> @Model.PhoneNumber</p>
            <p><b>Način plaćanja:</b> @Model.PaymentMethod</p>
            <p><b>Promo Code:</b> @Model.PromoCode</p>
        </div>
        <div class="col-sm-3">
            @if (!Model.Delivered)
            {
                <button class="btn btn-success button" onclick="setAsDelivered('@Model.OrderID')">Set as delivered</button><br />
            }
            <button class="btn btn-danger button" onclick="deleteOrder('@Model.OrderID')">Delete order</button>
        </div>
    </div>
</body>
</html>


