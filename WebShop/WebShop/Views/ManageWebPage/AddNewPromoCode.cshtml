@using WebShop.Models.ManageWebPage
@using WebShop.Core
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AddNewPromoCodeVM
@{
    ViewData["Title"] = "AddNewPromoCode";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/ManageWebPage/addNewPromoCode.css" />
</head>

<h2>Dodaj Novi Promo Kod</h2>

<div class="row">
    <form asp-action="AddNewPromoCode" method="post">
        @if (ViewContext.ViewData.ModelState.IsValid == false)
            {
            <div class="panel panel-danger">
                <div class="panel-heading">
                    There were some input errors.
                </div>
                <div class="panel-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
        }
        <div class="col-sm-6">
            <div class="row input-section">
                <label class="info-label">Kod: </label><input class="info-input" asp-for="Code" /><span asp-validation-for="Code" style="color: red"></span><br />
            </div>
            <div class="row input-section">
                <label class="info-label">Kategorija: </label>@Html.DropDownListFor(Model => Model.Category, PromoCode.DISCOUNT_TYPE, new { @class = "categories-drop-down" })<br />
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <input class="btn btn-primary button" type="submit" />
                    <a class="btn btn-danger button" asp-action="PromoCodes">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>
