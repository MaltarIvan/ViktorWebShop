@using WebShop.Models.ManageWebPage
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AddPictureVM
@{
    ViewData["Title"] = "AddPictureToGallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Picture To Gallery</h2>

<form asp-action="AddPictureToGallery" method="post" enctype="multipart/form-data">
    @if (ViewContext.ViewData.ModelState.IsValid == false)
            {
        <div class="panel panel-danger">
            <div class="panel-heading">
                There were some input errors.
            </div>
            <div class="panel-body">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
    }
    <label>Opis slike: </label><input asp-for="Description"/><span asp-validation-for="Description" style="color: red;"></span><br />
    <label>Slika proizvoda: </label><input asp-for="Image" id="file-upload" type="file" onchange="ShowPreview(this)" /><span asp-validation-for="Image" style="color:red"></span> <br />
    <img id="imgPrev" src="~/Content/default-picture.svg" class="Img-prev" style="width: 100px;" />
    <label id="file-name" class="File-label">No file chosen.</label>
    <input type="submit" />
</form>
    @section Scripts {
        <script src="~/js/ManageWebPage/AddPicture.js"></script>
    }
