@using WebShop.Models.ManageWebPage
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<OrderVM>
@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/ManageWebPage/orders.css" asp-append-version="true" />
</head>

<h2>Narudžbe</h2>
<div class="row">
    <div class="col-sm-4">
        <a class="btn btn-primary button" asp-action="AllOrders">Sve Naruđbe</a><br />
    </div>
    <div class="col-sm-4">
        <a class="btn btn-primary button" asp-action="DeliveredOrders">Poslane Naruđbe</a><br />
    </div>
</div>
@if (Model.Count == 0)
{
    <label style="margin: 20px;">Nema narudžbi za prikaz</label>
}
else
{
    @foreach (var item in Model)
    {
        <div id="@(item.OrderID + "order")">
            <hr />
            @Html.Partial("~/Views/ManageWebPage/OrderPartial.cshtml", item)
        </div>
    }
}


@section Scripts {
    <script src="~/js/ManageWebPage/orders.js"></script>
}