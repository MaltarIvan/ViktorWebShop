@using WebShop.Models.Shared
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ShoppingCartVM
@{
    ViewData["Title"] = "ShoppingCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ShoppingCart</h2>
<label>Ukupno: </label><p>@Model.TotalPrice kn</p>

<div>
    <a asp-controller="NewOrder" asp-action="AddNewOrder">Naruči</a>
</div>

@foreach (var item in Model.CartItemsVM)
{
    <div class="col-sm-6">
        @Html.Partial("~/Views/WebShop/CartItemPartial.cshtml", item)
    </div>
}
