@using WebShop.Models.WebShop;
@model ProductVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProductPartial</title>
</head>
<body>
    <div class="product-div">
        <div class="row">
            <div class="col-sm-6">
                <h3>@Model.Name</h3>
                <p><span><b>Cijena:</b> </span>@Model.Price</p>
                <img class="product-img" src="~/Content/products/@Model.ImageName" /><br />
            </div>
            <div class="col-sm-6">
                <p class="description-par">@Html.Raw(Model.Description)</p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <button id="addButton" class="btn btn-primary" style="margin: 5px;" onclick="addProduct('@Model.ProductID')">Dodaj proizvod u košaricu</button>
            </div>
            <div class="col-sm-6">
                @if (Model.IsInCart)
                {
                    <div>
                        <a asp-controller="WebShop" asp-action="ShoppingCart" class="glyphicon glyphicon-check">Proizvod je u košarici!</a>
                    </div>
                }
                <div id="@(Model.ProductID + "is-in-cart")" hidden>
                    <a asp-controller="WebShop" asp-action="ShoppingCart" class="glyphicon glyphicon-check">Proizvod je u košarici!</a>
                </div>
            </div>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-danger" style="margin-left: 5px;" asp-controller="ManageWebPage" asp-action="RemoveProduct" asp-route-productID="@Model.ProductID">Makni proizvod iz ponude</a>
        }
    </div>
    <hr />
</body>
</html>
