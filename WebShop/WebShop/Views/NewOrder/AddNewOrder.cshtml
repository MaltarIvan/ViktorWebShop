@using WebShop.Models.NewOrder
@using WebShop.Core
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AddNewOrderVM
@{
    ViewData["Title"] = "AddNewOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/NewOrder/addNewOrder.css" asp-append-version="true" />
</head>

<h2>Unesite vaše podatke</h2>
<div class="row">
    <hr />
    <p>Polja označena sa <span style="color: red;">*</span> su obavezna.</p>
    <p>Obavezno je napisati broj mobitela ili broj telefona.</p>
    <hr />
</div>
<div class="row">
    <form asp-action="AddNewOrder" , method="post">
        <div class="row">
            @if (ViewContext.ViewData.ModelState.IsValid == false)
            {
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        There were some input errors.
                    </div>
                    <div class="panel-body">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div div="row input-section">
                    <div class="col-sm-6 input-col">
                        <label class="info-label">Ime: <span style="color: red;">*</span></label><br /><input class="info-input" asp-for="Name" placeholder="Ime"/><span asp-validation-for="Name" style="color:red"></span><br />
                    </div>
                    <div class="col-sm-6 input-col">
                        <label class="info-label">Prezime: <span style="color: red;">*</span></label><br /><input class="info-input" asp-for="Surname" placeholder="Prezime"/><span asp-validation-for="Surname" style="color:red"></span><br />
                    </div>
                </div>
                <div class="row input-section">
                    <div class="col-sm-6 input-col">
                        <label class="info-label">Adresa 1: <span style="color: red;">*</span></label><br /><input class="info-input" asp-for="StreetAdress1" placeholder="Adresa 1"/><span asp-validation-for="StreetAdress1" style="color:red"></span><br />
                    </div>
                    <div class="col-sm-6 input-col">
                        <label class="info-label">Adresa 2 (optional): </label><br /><input class="info-input" asp-for="StreetAdress2" placeholder="Adresa 2"/><span asp-validation-for="StreetAdress2" style="color:red"></span><br />
                    </div>
                </div>
                <div class="row input-section">
                    <label>Grad: <span style="color: red;">*</span></label><br /><input class="info-input" asp-for="City" placeholder="Grad"/><span asp-validation-for="City" style="color:red"></span><br />
                </div>
                <div class="row input-section">
                    <label class="info-label">Poštanski broj: <span style="color: red;">*</span></label><br /><input class="info-input" asp-for="PostalCode" placeholder="Poštanski broj"/><span asp-validation-for="PostalCode" style="color:red"></span><br />
                </div>
                <div class="row input-section">
                    <label class="info-label">Država: <span style="color: red;">*</span></label><br />@Html.DropDownListFor(Model => Model.Country, Order.COUNTRIES, new { @class = "countries-drop-down"})<!--<input class="info-input" asp-for="Country" placeholder="Država"/><span asp-validation-for="Country" style="color:red"></span><br />-->
                </div>
                <div class="row input-section">
                    <label class="info-label">Email: <span style="color: red;">*</span></label><br /><input class="info-input" asp-for="Email" type="email" placeholder="Email"/><span asp-validation-for="Email" style="color:red"></span><br />
                </div>
                <div class="row input-section">
                    <span style="color: red;">*</span><br />
                    <div class="col-sm-6 input-col">
                        <label class="info-label">Broj mobitela: </label><br /><input class="info-input" asp-for="MobilePhoneNumber" placeholder="Broj mobitela"/><span asp-validation-for="MobilePhoneNumber" style="color:red"></span><br />
                    </div>
                    <div class="col-sm-6 input-col">
                        <label class="info-label">Broj telefona: </label><br /><input class="info-input" asp-for="PhoneNumber" placeholder="Broj telefona"/><span asp-validation-for="PhoneNumber" style="color:red"></span><br />
                    </div>
                </div>
                <div class="row input-section">
                    <div class="col-sm-3 input-col">
                        <input class="btn btn-primary" style="width: 90%" type="submit" value="Naruči" />
                    </div>
                    <div class="col-sm-3 input-col">
                        <a class="btn btn-danger" style="width: 90%" asp-controller="WebShop" asp-action="ShoppingCart">Odustani</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

